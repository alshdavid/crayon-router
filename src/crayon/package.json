{
  "name": "crayon",
  "version": "7.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/alshdavid/crayon"
  },
  "license": "ISC",
  "author": "",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --mode production",
    "build:stats": "webpack --mode production --stats",
    "build:watch": "webpack --watch",
    "build:watch:prod": "webpack --watch --mode production",
    "clean": "rm -rf dist && rm -rf coverage",
    "test": "jest --passWithNoTests",
    "test:cover": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/**.{ts,js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/index.{ts,js}"
    ],
    "coverageDirectory": "reports/coverage",
    "globals": {
      "window": {}
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "reporters": [
      "default"
    ],
    "testRegex": ".*\\.spec\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "crayon-kit": "*",
    "jest": "^29.5.0",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.2",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1"
  }
}
