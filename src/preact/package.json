{
  "name": "crayon-preact",
  "version": "7.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/alshdavid/crayon"
  },
  "license": "ISC",
  "author": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && ./node_modules/.bin/tsc -p ./tsconfig.build.json",
    "watch": "rm -rf dist && ./node_modules/.bin/tsc --watch  -p ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
    "test:cover": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/**.{ts,js}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/index.{ts,js}"
    ],
    "coverageDirectory": "reports/coverage",
    "globals": {
      "window": {}
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "reporters": [
      "default"
    ],
    "testRegex": ".*\\.spec\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "crayon": "*",
    "crayon-kit": "*",
    "jest": "^29.5.0",
    "preact": "^10.13.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2"
  },
  "peerDependencies": {
    "crayon": "*",
    "preact": "^10.1.1"
  }
}
