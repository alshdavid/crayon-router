{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "lib": ["dom", "es2017"]
  },
  "include": [
    "src/**/*.ts", 
    "tests/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts", 
    "node_modules", 
    "dist"
  ]
}
